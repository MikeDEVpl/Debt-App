<header class="masthead">
<form action="/newLoan/" method="post">
  <div class="form-group">
    <label for="name">Debtor</label>
    <input type="text" class="form-control" id="name" name="name" value="{{newLoan.name}}" placeholder="Nazwa dłużnika">    
  </div>
  <div class="form-group">
    <label for="amount">Amount</label>
    <input type="text" class="form-control" id="amount" name="amount" value="{{newLoan.amount}}" placeholder="Kwota pożyczki">    
  </div>
   <div class="form-group">
    <label for="returnDate">Date of return</label>
    <input type="date" class="form-control" id="returnDate" name="returnDate" value="{{newLoan.returnDate}}" placeholder="Data zwrotu">    
  </div>
  <input type="hidden" type="text" name="_id" value="{{newLoan._id}}"/>
  <input type="submit" class="btn btn-primary" value="Zakończ">
</form>
<a class="btn btn-primary" href="/loans/">Powrót </a>
</header>