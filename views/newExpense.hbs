<header class="masthead">
<form action="/newExpense/" method="post">
    
    <div class="form-group">
      <label for="selectEvent">Event</label>
      <input class="form-control tex-muted" readonly type="text" name="event" value="{{newExpense.event}}" id="event"/>
    </div>
    <div class="form-group">
    <select id="selectEvent" class="form-control" onchange="selEvnt()">
      {{#each events}}
        <option value="{{name}}"> {{name}} </option>
        <option  style= "display:none" id="{{name}}-participants">{{participants}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="expense">Expense</label>
    <input type="text" class="form-control" value="{{newExpense.name}}" name="name" id="name" placeholder="Expense name">    
  </div>
  <div class="form-group">
    <label for="expenseAmount">Cost</label>
    <input type="text" class="form-control"  value="{{newExpense.cost}}" name="cost" id="cost" placeholder="Kwota">    
  </div>

  <div class="form-group">
    <label for="sponsoredBy">Who's sponsoring</label>
    <input type="text" class="form-control" readonly value="{{newExpense.sponsoredBy}}" name="sponsoredBy" id="sponsoredBy" />
  </div>

   <div class="form-group">
    <select id="selectBuyer" class="form-control" onchange="selBuyer()">

    </select>
    <input class="form-control" type="hidden" name="participants" value="partycypanci" id="participants"/>
  </div>

  <input type="hidden" type="text" name="_id" value="{{newExpense._id}}"/>
  <button type="submit" class="btn btn-primary">Zakończ</button>
</form>
<a class="btn btn-primary" href="/expenses/">Powrót </a>
</header>

<script>
  document.addEventListener("DOMContentLoaded", function(){
    fillFields();
});
</script>
