<header class="masthead">
  <div align="center">
    <form action="/newEvent/" method="post">
      {{#each errors}}
        <label id='error-summary'>{{this}}</label><br>
      {{/each}}
      <div class="form-group col-md-4">
        <label for="eventName">Event name</label>
        <input type="text" class="form-control" name="name" id="name" value="{{newEvent.name}}"
          placeholder="Enter event name">
      </div>

      <div class="form-group col-md-4">
        <label for="returnDate">Event date</label>
        <input type="date" class="form-control" id="date" name="date" value="{{newEvent.date}}"
          placeholder="Return date">
      </div>

      <div class="form-group col-md-4">
        <label for="participant">Participants</label>
        <input type="text" class="form-control" name="participants" id="participants" value="{{newEvent.participants}}"
          placeholder="Enter names separated by comas">
      </div>

      <input type="hidden" type="text" name="_id" value="{{newEvent._id}}" />
      <button type="submit" class="btn btn-primary">Add event</button>
      <a class="btn btn-danger" href="/events/">Powr√≥t </a>
    </form>
  </div>
</header>